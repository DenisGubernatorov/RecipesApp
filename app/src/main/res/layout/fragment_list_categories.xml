<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cat_header_height_224dp"
        android:background="@drawable/bcg_categories"
        android:scaleType="centerInside">

        <TextView
            style="@style/CategoryHeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_full_16_dp"
            android:layout_marginBottom="@dimen/margin_full_16_dp"
            android:background="@drawable/header_title_shape"
            android:padding="@dimen/cat_header_padding"
            android:text="@string/text_category"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>