<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_half_8_dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="@dimen/cat_corner_radius_header"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipe_imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_image_size_100dp"
            android:contentDescription="@string/recipes_img_description"
            android:scaleType="centerCrop"
            tools:background="@color/test_red"
            tools:layout_height="@dimen/recipe_image_size_100dp" />

        <TextView
            android:id="@+id/recipe_titleTextView"
            style="@style/TitleText14Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_half_8_dp"
            android:textColor="@color/cat_header_txt"
            tools:text="@string/text_no_value" />

    </LinearLayout>


</androidx.cardview.widget.CardView>

