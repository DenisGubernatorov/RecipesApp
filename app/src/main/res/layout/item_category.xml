<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_half_8_dp"
        android:clickable="true"
        app:cardCornerRadius="@dimen/cat_corner_radius_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="2"
                android:contentDescription="@string/text_category"
                tools:background="#F00" />

            <TextView
                style="@style/TitleText14Style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_half_8_dp"
                android:layout_marginTop="@dimen/margin_half_8_dp"
                android:layout_marginBottom="@dimen/margin_half_8_dp"
                android:layout_weight="1"
                android:textColor="@color/cat_header_txt"
                tools:text="имя карточки" />

            <TextView
                style="@style/CategoryDescriptionTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_half_8_dp"
                android:layout_weight="1"
                tools:text="Описание карточки" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>